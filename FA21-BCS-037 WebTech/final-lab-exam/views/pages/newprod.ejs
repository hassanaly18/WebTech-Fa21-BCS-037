<figure class="text-center" id="newprod">
  <blockquote class="blockquote">
    <p style="font-size: 25px">ADD NEW PRODUCT</p>
    <hr id="newprodline" />
  </blockquote>
</figure>

<div class="container mt-5" id="prodform" >
    <!-- <h2>Submit Your Product</h2> -->
    <form action="/products/addNewProduct" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Product Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" step="1" class="form-control" id="price" name="price" placeholder="Enter price" required>
      </div>
      <div class="col-auto my-1" id="categories">
        <label class="mr-sm-2" for="category">Category</label>
        <select class="custom-select mr-sm-2" id="category" name="category" required>
          <!-- <option selected>Choose...</option> -->
          <option value="Cricket">Cricket</option>
          <option value="Football">Football</option>
        </select>
      </div>
      <div class="form-group" id="uploadpic">
        <label for="file" id="uploadlabel">Upload Images</label>
        <input type="file" class="form-control-file" id="file" name="image" accept="image/*" required>
      </div>
      <button type="submit" class="btn btn-primary" id="submitbtn">Submit</button>
    </form>    
  </div>